<div class="forms_container">
  <div class="top">
    <div class="breadcrumbs_container"><%= render_bcrumbs %></div>
    <div class="chief_povar_day_plan">

      <div id="head">
        <div class="float-left">
          <h4 class="name">План на день</h4>
          <h4 class="place">Горячий цех</h4>
        </div>

        <div class="float-right">
          <h4 class="datetime text-right">23 февраля 2017 г</h4>
        </div>
      </div>

      <div class="table-filters" data-table_id="table_day_plan">
        <%= link_to 'Блюда', '#', :class => 'btn btn-default', :data => {:value => 'Блюдо', :default => 'true' } %>
        <%= link_to 'Компоненты', '#', :class => 'btn btn-default', :data => {:value => 'Компонент' } %>
      </div>

      <div>
        <table class="table table-striped table-with-filters" data-id="table_day_plan">

          <thead>
            <tr>
              <th>Название</th>
              <th>Кол-во</th>
              <th>Статус</th>
              <th>Ответственный</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% day_plan_items.each do |el| %>
                <tr data-value="<%= el[:kind] %>">
                  <td class="col-title"><%= el[:title] %></td>
                  <td class="col-count"><%= el[:count] %></td>
                  <td class="col-status"><%= el[:status].html_safe %></td>
                  <td class="col-assigned_person"><%= el[:assigned_person] %></td>
                  <td class="text-right col-actions">
                    <% eval(el[:actions]).each do |act| %>
                      <%= link_to act[0], '#', :class => "btn btn-#{act[2]}" %>
                    <% end %>
                  </td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
    <%= render_form_footer %>
  </div>
  <%= render_modal_assign %>
</div>